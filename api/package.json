{
  "name": "custom-forms-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "node dev-server.mjs",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create custom-forms-db",
    "db:init": "wrangler d1 execute custom-forms-db --file=../schema.sql",
    "db:query": "wrangler d1 execute custom-forms-db --command",
    "r2:create": "wrangler r2 bucket create custom-forms-images",
    "secret:set": "wrangler secret put ADMIN_PASSWORD",
    "tail": "wrangler tail"
  },
  "devDependencies": {
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "jose": "^6.1.3",
    "zod": "^4.3.6"
  }
}
